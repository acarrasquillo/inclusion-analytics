{% extends 'base.html.j2' %}

{% block main_header %}
	<h1 class="h2">{% block title %}Viewers hometowns{% endblock %}</h1>
{% endblock %}

{% block content %}

	{# form add a viewers town #}
	<form method="post">
	  <div class="mb-3">
	    <label for="name" class="form-label">Town name</label>
	    <input name="name" class="form-control" id="name" aria-describedby="nameHelp" required>
	    <div id="nameHelp" class="form-text">Enter the viewers hometown name</div>
	  </div>
	  <button type="submit" class="btn btn-primary" value="Add">Add Hometown</button>
	</form>

{% endblock %}